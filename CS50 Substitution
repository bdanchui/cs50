#include <cs50.h>
#include <stdio.h>
#include <ctype.h>
#include <string.h>

void substitution(string text, string encrpyted);

int main(int argc, string argv[])
{
    // Checks number of argument and argument input
    if (argc != 2)
    {
        printf("Usage: %s key\n", argv[0]);
        return 1;
    }
    
    if (strlen(argv[1]) != 26)
    {
        printf("Key must contain 26 characters.\n");
        return 2;
    }
    
    // Getting text from user to encrypt
    string plaintext = get_string("plaintext: ");
    printf("ciphertext: ");
    
    //Encrypting word
    substitution(plaintext, argv[1]);
    printf("\n");
    return 0;
}

void substitution(string text, string encrypted)
{
    char c;
    char s;
    
    for (int i = 0, n = strlen(text); i < n; i++)
    {
        c = text[i];
        if (isalpha(c))
        {
            if (isupper(c))
            {
                c -= 'A';
                s = encrypted[(int)c];
                printf("%c", toupper(s));
            }
            else if (islower(c))
            {
                c -= 'a';
                s = encrypted[(int) c];
                printf("%c", tolower(s));
            }
        }
        else
        {
            printf("%c", c);
        }
    }
}

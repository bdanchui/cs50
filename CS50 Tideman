 #include <cs50.h>
#include <stdio.h>
#include <string.h>

// Max number of candidates
#define MAX 9

// preferences[i][j] is number of voters who prefer i over j
int preferences[MAX][MAX];

// locked[i][j] means i is locked in over j
bool locked[MAX][MAX];

// Each pair has a winner, loser
typedef struct
{
    int winner;
    int loser;
}
pair;

// Array of candidates
string candidates[MAX];
pair pairs[MAX * (MAX - 1) / 2];

int pair_count;
int candidate_count;

// Function prototypes
bool vote(int rank, string name, int ranks[]);
void record_preferences(int ranks[]);
void add_pairs(void);
void sort_pairs(void);
void lock_pairs(void);
void print_winner(void);
bool check_cycle(int winner, int loser);

int main(int argc, string argv[])
{
    // Check for invalid usage
    if (argc < 2)
    {
        printf("Usage: tideman [candidate ...]\n");
        return 1;
    }

    // Populate array of candidates
    candidate_count = argc - 1;
    if (candidate_count > MAX)
    {
        printf("Maximum number of candidates is %i\n", MAX);
        return 2;
    }
    for (int i = 0; i < candidate_count; i++)
    {
        candidates[i] = argv[i + 1];
    }

    // Clear graph of locked in pairs
    for (int i = 0; i < candidate_count; i++)
    {
        for (int j = 0; j < candidate_count; j++)
        {
            locked[i][j] = false;
        }
    }

    pair_count = 0;
    int voter_count = get_int("Number of voters: ");

    // Query for votes
    for (int i = 0; i < voter_count; i++)
    {
        // ranks[i] is voter's ith preference, an array
        int ranks[candidate_count];

        // Query for each rank
        for (int j = 0; j < candidate_count; j++)
        {
            string name = get_string("Rank %i: ", j + 1);

            if (!vote(j, name, ranks))
            {
                printf("Invalid vote.\n");
                return 3;
            }
        }

        record_preferences(ranks);

        printf("\n");
    }

    add_pairs();
    sort_pairs();
    lock_pairs();
    print_winner();
    return 0;
}

// Update ranks given a new vote
bool vote(int rank, string name, int ranks[])
{
    // TODO
    for (int i = 0; i < candidate_count; i++)
    {
        if (strcmp(candidates[i], name) == 0)
        {
            //recording candidate index in ranks[] index 
            ranks[rank] = i;
            return true;
        }
    }
    return false;
}

// Update preferences given one voter's ranks
void record_preferences(int ranks[])
{
    // TODO
    // counting preferences matrix
    for(int i = 0; i < candidate_count-1; i++)
    {
        for (int j = i+1; j < candidate_count; j++)
        {
            // preferences +1 based on order of ranks 
            // eg. ranks[4,3,2,1] . preference[4][3] will be added and so on.
                preferences[ranks[i]][ranks[j]]++;
        }
    }
    return;
}

// Record pairs of candidates where one is preferred over the other
void add_pairs(void)
{
    // TODO
    for (int i = 0; i < candidate_count; i++)
    {
        for(int j = 0; j < candidate_count; j++)
        {
            // checks if i is preferred over j by comparing strength
            if ((preferences[i][j] > preferences[j][i]))
            {
                pairs[i].winner = i;
                pairs[i].loser = j;
                pair_count++;
            }
        }
    }
    return;
}

// Sort pairs in decreasing order by strength of victory
void sort_pairs(void)
{
    // TODO
    pair k;
    // looping over rows in pair_count
    for (int i = 0; i < pair_count; i++)
    {
        // looping over column in pair_count
        for (int j = 1; j < pair_count; j++)
        {
            // comparing first pair with every other pair. If first pair is smaller, swap with the next smallest pair (selection sort)
            if (preferences[pairs[i].winner][pairs[i].loser] < preferences[pairs[j].winner][pairs[j].loser])
            {
                k = pairs[i];
                pairs[i] = pairs[j];
                pairs[j] = k;
            }
        }
        
    }
    return;
}

// Lock pairs into the candidate graph in order, without creating cycles
// start from the first pair (strongest pair), locked pairs from false to true
// 
void lock_pairs(void)
{
    // TODO
    // looping over all pairs in pairs_count
    for (int i = 0; i < pair_count; i++)
    {
        // check if cycle is created
        if (!check_cycle(pairs[i].winner, pairs[i].loser))
        {
            locked[pairs[i].winner][pairs[i].loser] = true;
        }
    }
    return;
}

// Print the winner of the election
void print_winner(void)
{
    // TODO
    //check by candidates if it is preferred over other candidates
    for (int i = 0; i < candidate_count; i++)
    {
        bool source = true;
        
        // checks if any of the candidates is preferred over candidate[i]. If there is, candidate[i] is not source candidate
        for (int j = 0; j < candidate_count; j++)
        {
            if (locked[j][i] == true)
            {
                source = false;
                break;
            }
        }
        if (source == true)
        {
            printf("%s\n", candidates[i]);
        }
    }
    return;
}
bool check_cycle(int winner, int loser)
{
    // if the reverse is true, there is a cycle formed
    if (locked[loser][winner] == true)
    {
        return true;
    }
    // if the reverse is false, check for any other preferences over the winner
    // check if a cycle is formed
    for (int i = 0; i<candidate_count; i++)
    {
        // if there is another preference over current winner
        // send preference with loser to check if a cycle is formed from loser -> preference
        // recursive method
        if (locked[i][winner] == true)
        {
            check_cycle(i,loser);
        }
    }
    return false;
}
